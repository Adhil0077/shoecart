          <%=data.quantity  %> <br>
       <% }); %></td>



             <td><%ordersDetails.product.forEach(data => {%>
              <%=data.productId.price %><br>
        <%});  %></td> 

        <td><%ordersDetails.product.forEach(data => {%>
          <%=data.singleTotal %><br>
    <%});  %></td> 

        <td style="width: 450px;"><%=ordersDetails.total%></td>


        <td  style="width: 100px;">
          <%=ordersDetails.paymentType  %>
        </td>


        <td  style="width: 100px;">
          <%=ordersDetails.status  %>
        </td>

          </tr>
    
        </tbody>
      </table>

     
    </div>
