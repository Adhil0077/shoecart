<%- include ('../layout/user/header.ejs') %>
	<%- include ('../layout/user/navbar.ejs') %>

	<!-- Text & image slider -->
	<aside id="colorlib-hero">
		<div class="flexslider">
			<ul class="slides">
				<% banner.forEach((element) => {%>
				<li style="background-image: url('/images/<%=element.img%>');">
					 <div class="overlay"></div>
					 <div class="container-fluid">
						 <div class="row">
							 <div class="col-sm-6 offset-sm-3 text-center slider-text">
								 <div class="slider-text-inner">
									 <div class="desc" >
										 <h1  style=" text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);" class="head-1">ShoeCartðŸ‘Ÿ</h1>
										 <h2  style=" text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);" class="head-2">Shoes</h2>
										 <h2  style=" text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);" class="head-3">Collection</h2>
										 <p  style=" text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);" class="category"><span>New trending shoes</span></p>
										 <p><a href="/shop" class="btn btn-primary">Shop Collection</a></p>
									 </div>
								 </div>
							 </div>
						 </div>
					 </div>
				 </li>
				<%}); %>
				</ul>
			</div>
	</aside>


	<div class="colorlib-intro">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 text-center">
					<h2 class="intro">It started with a simple idea: Create quality, well-designed products that I wanted myself.</h2>
				</div>
			</div>
		</div>
	</div>
	<div class="colorlib-product">
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-6 text-center">
					<div class="featured">
						<a href="" class="featured-img" style="background-image: url(/images/1.jpg);"></a>
						<div class="desc">
							<h2><a href="#">Shop Men's Collection</a></h2>
						</div>
					</div>
				</div>
				<div class="col-sm-6 text-center">
					<div class="featured">
						<a href="#" class="featured-img" style="background-image: url(/images/2.jpg);"></a>
						<div class="desc">
							<h2><a href="#">Shop Women's Collection</a></h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="colorlib-product">
		<div class="container">
			<div class="row">
				<div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
					<h2>Best Sellers</h2>
				</div>
			</div>
			<div class="row row-pb-md">
		<%product.forEach(element => {%>
				<div class="col-lg-3 mb-4 text-center">
					<div class="product-entry border">
						<a href="/shop/productdetail/<%=element._id %>" class="prod-img">
							<img src="/images/<%=element.image[0] %>" class="img-fluid" alt="Free html5 bootstrap 4 template">
						</a>
						<div class="desc">
							<h2 style="font-weight: bold;"><a href="/shop/productdetail/<%=element._id %>"><%=element.productName%></a></h2>
						</div>
					</div>
				</div>
				<%}); %>				
			</div>
			<div class="row">
				<div class="col-md-12 text-center">
					<p><a href="/shop" class="btn btn-primary btn-lg">Shop All Products</a></p>
				</div>
			</div>
		</div>
	</div>	


		

