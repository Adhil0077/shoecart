<script>
	function towishlist(proId, price) {
		$.ajax({
			url: '/towishlist',
			data: {
				product: proId,
				price: price
			},
			method: 'post',
			success: (Response) => {
				if(Response.incart){
					Swal.fire({
					position: 'top-end',
					icon: 'warning',
					title: 'Already in Cart',
					showConfirmButton: false,
					timer: 700
				})
				} else if(Response.already){
					Swal.fire({
					position: 'top-end',
					icon: 'warning',
					title: 'Already in Wishlist',
					showConfirmButton: false,
					timer: 700
				})
				}
				else if(Response.added){
					Swal.fire({
					position: 'top-end',
					icon: 'success',
					title: 'Item Added to Wishlist',
					showConfirmButton: false,
					timer: 700
				})
				}else if(Response.login){
			Swal.fire({
			position: 'top-end',
			icon: 'info',
			title: 'You Need to Login',
			showConfirmButton: false,
			timer: 700
		})
		}
				
				$('.reloadDiv').load('/shop/productdetail/ .reloadDiv')
			}
		})
	}

</script>





<script>
function tocart(proId, price) {
$.ajax({
	url: '/tocart',
	data: {
		product: proId,
		price: price
	},
	method: 'post',
	success: (Response) => {
		if(Response.alreadyInCart){
			Swal.fire({
			position: 'top-end',
			icon: 'warning',
			title: 'Item Already in Cart',
			showConfirmButton: false,
			timer: 700
		})
		}else if(Response.added){
			Swal.fire({
			position: 'top-end',
			icon: 'success',
			title: 'Item Added to Cart',
			showConfirmButton: false,
			timer: 700
		})
		}else if(Response.login){
			Swal.fire({
			position: 'top-end',
			icon: 'info',
			title: 'You Need to Login',
			showConfirmButton: false,
			timer: 700
		})
		}
		
		$('.reloadDiv').load('/shop/productdetail/ .reloadDiv')
	}
})
}

</script>





