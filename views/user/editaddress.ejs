<%- include ('../layout/user/header.ejs') %>
<%- include ('../layout/user/navbar.ejs') %>


<div id="addaddress" class="container mt-4" style="font-size: large;">
  <form method="post" >

    <div class="row">

      <div class="col-md-6 ">
        <div class="profile-head">
          <h5 style="color: black;font-weight: bold;">
            Edit Address
          </h5>

          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                aria-controls="home" aria-selected="true">About</a>
                
            </li>
          </ul>
        </div>
      </div>
 
           

      <div class="col-md-8" style="color: black;font-weight: bold;">
        <div class="tab-content profile-tab" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
              <div class="col-md-6">
                Name:
                <input type="text" class="form-control" placeholder="Enter Your Full Name" name="username"   value="<%=data.name%>"  required>
              </div>

              <div class="col-md-6">
                House Name:
                <input type="text" class="form-control" placeholder="Enter Housename" name="userhousename"  value="<%=data.housename%>"  required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                Street:
                <input type="text" class="form-control" placeholder="Enter Street Name" name="userstreet"  value="<%=data.street%>"  required>

              </div>
              <div class="col-md-6">
                District:
                <input type="text" class="form-control" placeholder="Enter your District "  value="<%=data.district%>"  name="userdistrict"
                  required>
                  
              </div>
              <div class="col-md-6">
                
                  
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                State:
                <input type="text" class="form-control" placeholder="Enter your State " name="userstate" value="<%=data.state%>"  required>

              </div>

            </div>
            <div class="row">
              <div class="col-md-6">
                Phone:
                <input type="text" class="form-control" placeholder="Enter your Phone Number "
                  name="userphonenumber" value="<%=data.phone%>"  required>

              </div>

            </div>
            <div class="row">
              <div class="col-md-6">
                Pincode:
                <input type="text" class="form-control" placeholder="Enter your Pincode " name="userpincode" value="<%=data.pincode%>" 
                  required>

              </div>

            </div>

            <div class="row">
              <div class="col-md-6">
                Country:
                <input type="text" class="form-control mb-5" placeholder="Enter your Country " name="usercountry" value="<%=data.country%>" 
                  required>

              </div>

              <button type="submit" style="margin-bottom:36px ;font-weight: bold;padding: 22px; width:274px" class="btn btn-outline-warning">Submit</button>
             

            </div>

          </div>

        </div>
      </div>
    </div>
  </form>
</div>



<%- include ('../layout/user/footer.ejs') %>